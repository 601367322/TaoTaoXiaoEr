<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="colorPrimaryDark">@color/actionbar_dark</item>
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionMenuTextAppearance">@style/MyABmenuTextAppearance</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions">homeAsUp|showTitle</item>
    </style>

    <style name="welcome" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/actionbar_dark</item>
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>
    </style>

    <style name="viewpager" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/actionbar_dark</item>
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>
    </style>

    <!-- menu -->
    <style name="MyABmenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
