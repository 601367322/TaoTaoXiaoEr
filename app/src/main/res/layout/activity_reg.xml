<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:text="13488616135"
        android:textSize="15sp"
        android:id="@+id/phone"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/normal_edit_text_bg"
        android:textColor="#838383"
        android:hint="@string/please_set_phone"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/remind_text"
        android:layout_width="match_parent"
        android:textColor="#9a9a9a"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="请输入13488616135收到的短信验证码"
        android:layout_height="45dp"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="45dp">

        <EditText
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:id="@+id/code"
            android:background="@drawable/normal_edit_text_bg"
            android:textColor="#838383"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:inputType="number"
            android:hint="@string/code"
            android:text="111111"
            android:enabled="false"
            android:layout_height="match_parent" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:id="@+id/code_btn"
            android:textColor="@drawable/normal_edit_text_color_select"
            android:text="@string/get_code"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/normal_edit_text_bg_select"
            android:layout_height="match_parent" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:text="@string/argee_xieyi"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:text="@string/next"
        android:id="@+id/reg_next"
        android:enabled="false"
        android:layout_marginTop="10dp"
        android:textColor="@drawable/reg_next_btn_text_select"
        android:textSize="18sp"
        android:background="@drawable/reg_next_btn_select"
        android:layout_height="44dp" />
</LinearLayout>