<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/actionbar"
    android:layout_height="@dimen/actionbar_height">

    <RelativeLayout
        android:id="@+id/left_btn"
        android:layout_width="@dimen/actionbar_height"
        android:clickable="true"
        android:background="@drawable/exit_btn_bg"
        android:layout_height="@dimen/actionbar_height">

        <ImageView
            android:src="@drawable/ic_action_image_dehaze"
            android:id="@+id/left_btn_icon"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/action_bar_title"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/abc_primary_text_material_dark"
        android:text="@string/app_name"
        android:textSize="@dimen/actionbar_title_size"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/right_btn"
        android:background="@drawable/exit_btn_bg"
        android:clickable="true"
        android:layout_width="@dimen/actionbar_height"
        android:layout_height="@dimen/actionbar_height">

        <ImageView
            android:id="@+id/right_btn_icon"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_action_action_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>