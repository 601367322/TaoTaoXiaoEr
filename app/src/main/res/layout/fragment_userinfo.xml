<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/activity_bg"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/item_have_btm_line_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="头像"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <com.ttxr.weight.CircleImageView
                android:layout_width="80dp"
                app:border_width="0dp"
                app:border_color="@color/transparent"
                android:src="@drawable/logo"
                android:layout_height="80dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:background="@drawable/item_have_btm_line_bg"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="昵称"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/item_have_btm_line_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="地址"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/item_have_btm_line_bg"
            android:gravity="center_vertical"
            android:clickable="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="性别"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/item_no_btm_line_bg"
            android:gravity="center_vertical"
            android:clickable="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="身份"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:background="@drawable/item_have_btm_line_bg"
            android:gravity="center_vertical"
            android:clickable="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="手机号"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:background="@drawable/item_have_btm_line_bg"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="第三方绑定"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:background="@drawable/item_no_btm_line_bg"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="斗乃狂魔"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:text="@string/exit"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:background="@drawable/exit_btn_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>