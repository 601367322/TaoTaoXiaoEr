<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/all_tab"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/time_tab"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/order_tab_press"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="时间"
                android:textColor="@color/setting_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/time_state_icon"
                android:layout_width="wrap_content"
                android:src="@drawable/tab_state"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:background="@color/dfdfdf"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/order_tab_normal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="状态"
                android:textColor="@color/setting_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/tab_state"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.ttxr.weight.swipe.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/all_tab"
        android:layout_height="match_parent">

        <com.ttxr.weight.listview.XListView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:focusable="false"
            android:id="@+id/listview"
            android:listSelector="@color/transparent"
            android:layout_height="match_parent">

        </com.ttxr.weight.listview.XListView>
    </com.ttxr.weight.swipe.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/time_select_item"
        android:visibility="gone"
        android:layout_below="@id/all_tab"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <View
            android:id="@+id/trans_bg"
            android:layout_width="match_parent"
            android:alpha="0"
            android:background="#4c000000"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/time_select_item_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/order_tab_normal"
                android:layout_height="@dimen/setting_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/actionbar"
                    android:textSize="@dimen/setting_title_size"
                    android:text="默认"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/f4f4f4" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/badge_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/order_tab_normal"
                android:layout_height="@dimen/setting_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/actionbar"
                    android:textSize="@dimen/setting_title_size"
                    android:text="时间从近到远"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/f4f4f4" />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/badge_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/order_tab_normal"
                android:clickable="true"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_height="@dimen/setting_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/actionbar"
                    android:textSize="@dimen/setting_title_size"
                    android:text="时间从远到近"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:src="@drawable/badge_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_shadow_down"
        android:layout_below="@id/all_tab" />


</RelativeLayout>